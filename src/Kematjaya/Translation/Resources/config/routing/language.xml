<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="kematjaya_language_index" path="/language" methods="GET POST">
        <default key="_controller">Kematjaya\Translation\Controller\LanguageController:index</default>
    </route>
    
    <route id="kematjaya_language_create" path="/language/create" methods="GET POST">
        <default key="_controller">Kematjaya\Translation\Controller\LanguageController:create</default>
    </route>
    
    <route id="kematjaya_language_edit" path="/language/edit/{id}" methods="GET POST">
        <default key="_controller">Kematjaya\Translation\Controller\LanguageController:edit</default>
    </route>
    
    <route id="kematjaya_language_delete" path="/language/delete/{id}" methods="POST DELETE">
        <default key="_controller">Kematjaya\Translation\Controller\LanguageController:delete</default>
    </route>

    <route id="kematjaya_language_change" path="/language/change/{locale}" methods="GET">
        <default key="_controller">Kematjaya\Translation\Controller\LanguageController:change</default>
    </route>
    
</routes>
